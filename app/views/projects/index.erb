<div class="container">
  <h1 class="page-title">List of Projects</h1>

  <table class="table table-striped table-hover table-responsive">
    <thead>
      <tr>
        <th>Project #</th>
        <th>Name:</th>
        <th>Deadline:</th>
        <th>Date Started:</th>
        <th>Project Status:</th>
        <th>Date Completed:</th>
        <th>Description:</th>
        <th>Notes:</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each.with_index(1) do |project, row_index| %>
         <tr class='clickable-row' data-href='<%= url("/#{@user.username}/projects/#{project.slug}") %>'>
          <th scope="row"><%= row_index %></th>
          <td><%= project.name %></td>
          <td><%= project.deadline %></td>
          <td><%= project.date_started %></td>
          <td><%= project.status %></td>
          <td><%= project.date_completed %></td>
          <td><%= project.description %></td>
          <td><%= project.notes %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
  <a class="btn" href='<%= url("/#{@user.username}/projects/new") %>'>Create Project</a>

</div><!-- /.container -->
