<h1>User Profile</h1>

<%= @user.username %><br>
<%= @user.first_name %><br>
<%= @user.last_name %><br>
<%= @user.email %><br><br>

<h2>Projects</h2>
<% @projects.each do |project| %>
    <%= project.name %><br>
    <%= project.status %><br>
    <%= project.deadline %><br><br>
<% end %>


<br><br>

<form action="/users/<%= @user.username %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Account">
</form>
