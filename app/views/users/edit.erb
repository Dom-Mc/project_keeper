<main class="container">
  <div class="row centered">
    <div class="col-sm-6">

      <h1 class="page-title form-title">Edit Profile</h1>
      <%= erb :'partials/_user_error_messages' %>

      <form action="/users/<%= @user.username %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">

        <div class="form-group<%= ' has-error' if @user.errors[:first_name].any? %>">
          <label for="user_first_name">First Name:</label>
          <input type="text" id="user_first_name" class="form-control" name="user[first_name]"  value="<%= @user.first_name %>">
        </div><!-- /.form-group -->

        <div class="form-group<%= ' has-error' if @user.errors[:last_name].any? %>">
          <label for="user_last_name">Last Name:</label>
          <input type="text" id="user_last_name" class="form-control" name="user[last_name]" value="<%= @user.last_name %>">
        </div><!-- /.form-group -->

        <div class="form-group<%= ' has-error' if @user.errors[:email].any? %>">
          <label for="user_email">Email:</label>
          <input type="email" id="user_email"  class="form-control" name="user[email]" value="<%= @user.email %>">
        </div><!-- /.form-group -->

        <div class="row">
          <div class="form-group<%= ' has-error' if @user.errors[:password].any? %> col-sm-8">
            <label for="user_password">Password (6-15 characters):</label>
            <input type="password" id="user_password" class="form-control" name="user[password]" placeholder="Enter new password">
          </div><!-- /.form-group -->
        </div><!-- /.row -->

        <div class="row">
          <div class="form-group<%= ' has-error' if @user.errors[:password_confirmation].any? %> col-sm-8">
            <label for="user_password_confirmation">Confirm Password:</label>
            <input type="password" id="user_password_confirmation" class="form-control" name="user[password_confirmation]" placeholder="Renter new password">
          </div><!-- /.form-group -->
        </div><!-- /.row -->

        <div class="centered">
          <input class="btn" type="submit" value="Update Profile">
        </div><!-- /.centered -->

      </form>

    </div><!-- /.col-sm-6 -->
  </div><!-- /.row -->
</main>
