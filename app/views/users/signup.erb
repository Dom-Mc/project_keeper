<div class="container">

<h1>Signup</h1>

<form action="/signup" method="post">

  <div class="form-group">
    <label for="user_first_name">First Name:</label>
    <input type="text" id="user_first_name" class="form-control" name="user[first_name]" value="<%= @user.first_name %>">
  </div>

  <div class="form-group">
    <label for="user_last_name">Last Name:</label>
    <input type="text" id="user_last_name" class="form-control" name="user[last_name]" value="<%= @user.last_name %>">
  </div>

  <div class="form-group">
    <label for="user_email">Email:</label>
    <input type="email" id="user_email" class="form-control" name="user[email]" value="<%= @user.last_name %>">
  </div>

  <div class="form-group">
    <label for="user_username">Username:</label>
    <input type="text" id="user_username" class="form-control" name="user[username]" value="<%= @user.last_name %>" placeholder="Select a username">
  </div>

  <div class="form-group">
    <label for="user_password">Password:</label>
    <input type="password" id="user_password" class="form-control" name="user[password]" placeholder="6-15 characters">
  </div>

  <div class="form-group">
    <label for="user_password_confirmation">Confirm Password:</label>
    <input type="password" id="user_password_confirmation" class="form-control" name="user[password_confirmation]">
  </div>

  <input type="submit" class="btn btn-default" value="Create Account">

</form>

</div><!-- /container -->
